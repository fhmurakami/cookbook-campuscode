<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to 'Cookbook', root_path, class: 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to 'Home', root_path, class: 'nav-link'%>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'Enviar uma receita', new_recipe_path, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Criar conta', new_user_registration_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Entrar', new_user_session_path, class: 'nav-link' %>
        </li>
      <% end %>
      <% if user_signed_in? && current_user.admin %>
        <li class="nav-item">
          <%= link_to 'Cadastrar tipo de receita', new_recipe_type_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Cadastrar cozinha', new_cuisine_path, class: 'nav-link' %>
        </li>
      <% end %>
      <li class="nav-item">
        <%= form_with url: search_path, method: :get, local: true, class: 'form-inline' do |f| %>
          <%= f.label :search, 'Buscar', class: 'navbar-text' %>
          <%= f.text_field :search, class: 'form-control ml-2' %>
          <%= f.submit 'Pesquisar', class: 'btn btn-primary ml-2' %>
        <% end %>
      </li>
    </ul>
    <% if user_signed_in? %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'Meu perfil', user_path(current_user), class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Editar perfil', edit_user_path(current_user), class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      </ul>
    <% end %>
  </div>
</nav>