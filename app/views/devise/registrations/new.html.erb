<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control col-md-6' %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: 'form-control col-md-6' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control col-md-6' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control col-md-6' %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control col-md-6' %>
  </div>

  <div class="field">
    <%= f.label :facebook %>
    <%= f.text_field :facebook, class: 'form-control col-md-6' %>
  </div>

  <div class="field">
    <%= f.label :twitter %>
    <%= f.text_field :twitter, class: 'form-control col-md-6' %>
  </div>

  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo, class: 'form-control-file' %>
  </div>
  

  <div class="actions">
    <%= f.submit "Criar conta", class: 'btn btn-primary mt-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
